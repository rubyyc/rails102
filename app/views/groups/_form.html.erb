<%= form_for @group do |f|  %>
  <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>


  <div class="form-group">
    <div class="form-group string optional">
      <%= f.label 'title', :class => 'strong optional control-label' %>
      <%= f.text_field :title, :class => 'strong optional form-control' %>
    </div>

    <div class="form-group string optional">
      <%= f.label 'description', :class => 'strong optional control-label'  %>
      <%= f.text_area :description, :class => 'strong optional form-control' %>
    </div>
  </div>




  <%= f.submit "Submit", class: 'btn btn-primary',  :disable_with => 'Submiting...' %>
<% end %>